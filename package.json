{
  "name": "boardgamestar",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "build": {
    "appId": "com.boardgamestar",
    "files": [
      "games/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/fabric": "^3.5.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "@types/peerjs": "^1.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^5.0.1",
    "@types/uuid": "^3.4.6",
    "fabric": "^3.6.0",
    "konva": "^4.1.2",
    "lodash": "^4.17.15",
    "peerjs": "^1.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-konva": "^16.12.0-0",
    "react-router-dom": "^5.1.2",
    "slugid": "^2.0.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^5.0.1",
    "typescript": "~3.7.2",
    "use-image": "^1.0.5",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.6.0",
    "husky": "^4.2.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react-scripts": "3.3.0"
  },
  "scripts": {
    "start:web": "REACT_APP_WEB_BUILD=1 react-scripts start",
    "test:web": "REACT_APP_WEB_BUILD=1 react-scripts test",
    "build:web": "REACT_APP_WEB_BUILD=1 react-scripts build",
    "build": "react-scripts build",
    "start": "nf start -p 3001",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -wml"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
