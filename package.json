{
  "name": "boardgamestar",
  "version": "0.2.0",
  "author": "Ryan McMahon",
  "description": "Board Game Star is a platform for playing digital boardgames.",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@inlet/react-pixi": "^4.1.0",
    "@pixi/filter-outline": "^3.1.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/fabric": "^3.5.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "@types/peerjs": "^1.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^5.0.1",
    "@types/uuid": "^3.4.6",
    "detect-browser": "^5.1.0",
    "dexie": "^3.0.1",
    "fabric": "^3.6.0",
    "lodash": "^4.17.15",
    "peerjs": "^1.2.0",
    "pixi-viewport": "^4.11.3",
    "pixi.js": "^5.2.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-fps-stats": "^0.1.2",
    "react-icons": "^3.10.0",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.1.2",
    "slugid": "^2.0.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^5.0.1",
    "typescript": "~3.7.2",
    "unique-names-generator": "^4.2.0",
    "use-image": "^1.0.5",
    "uuid": "^3.4.0",
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.6.0",
    "husky": "^4.2.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react-scripts": "3.3.0"
  },
  "scripts": {
    "start:web": "REACT_APP_WEB_BUILD=1 BROWSER=none react-scripts start",
    "test:web": "REACT_APP_WEB_BUILD=1 react-scripts --inspect-brk test",
    "build:web": "REACT_APP_WEB_BUILD=1 react-scripts build",
    "server": "yarn build:web && npx http-server build --proxy http://localhost:8080?",
    "react-start": "BROWSER=none react-scripts start",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "build": "REACT_APP_WEB_BUILD= react-scripts build",
    "start": "nf start -p 3001",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -lmw",
    "release": "npm run dist -- --publish always",
    "release:all": "npm run dist:all -- --publish always"
  },
  "build": {
    "appId": "com.boardgamestar",
    "publish": [
      "github"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Game"
    },
    "mac": {
      "target": "zip",
      "icon": "icon.png"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "games/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
