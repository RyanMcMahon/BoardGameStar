{
  "name": "boardgamestar",
  "version": "0.2.0",
  "author": "Ryan McMahon",
  "description": "Board Game Star is a platform for playing digital boardgames.",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@inlet/react-pixi": "^6.6.5",
    "@pixi/filter-outline": "^4.1.5",
    "@stripe/react-stripe-js": "^1.6.0",
    "@stripe/stripe-js": "^1.21.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/fabric": "^4.5.6",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.11",
    "@types/peerjs": "^1.1.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-select": "^5.0.1",
    "@types/socket.io-client": "^3.0.0",
    "@types/styled-components": "^5.1.16",
    "@types/uuid": "^8.3.3",
    "axios": "^0.24.0",
    "detect-browser": "^5.2.1",
    "dexie": "^3.2.0",
    "fabric": "^4.6.0",
    "firebase": "^9.6.0",
    "lodash": "^4.17.21",
    "npm": "^8.2.0",
    "peerjs": "^1.3.2",
    "pixi-viewport": "^4.34.3",
    "pixi.js": "^6.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-fps-stats": "^0.1.4",
    "react-icons": "^4.3.1",
    "react-markdown": "^7.1.1",
    "react-router": "^6.0.2",
    "react-router-dom": "^6.0.2",
    "react-select": "^5.2.1",
    "slugid": "^3.0.0",
    "socket.io-client": "^4.4.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.2",
    "unique-names-generator": "^4.6.0",
    "use-image": "^1.0.8",
    "uuid": "^8.3.2",
    "vm2": "^3.9.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.2",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start:web": "cross-env REACT_APP_WEB_BUILD=1 BROWSER=none ./node_modules/.bin/react-scripts start",
    "test:web": "REACT_APP_WEB_BUILD=1 react-scripts --inspect-brk test",
    "build:web": "CI= REACT_APP_WEB_BUILD=1 react-scripts build",
    "server": "yarn build:web && npx http-server build --proxy http://localhost:8080?",
    "react-start": "BROWSER=none react-scripts start",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "build": "CI= REACT_APP_WEB_BUILD= react-scripts build",
    "start": "nf start -p 3001",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -lmw",
    "release": "npm run dist -- --publish always",
    "release:all": "npm run dist:all -- --publish always"
  },
  "build": {
    "appId": "com.boardgamestar",
    "publish": [
      "github"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Game"
    },
    "mac": {
      "target": "zip",
      "icon": "icon.png"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "games/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky-bak": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
